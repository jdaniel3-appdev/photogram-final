<div>
  <div>
    <h1>
      List of photos
    </h1>
  </div>
</div>

<hr>

<% if session.fetch(:user_id).present? == TRUE %>
  <div>
    <div>
      <form action="/insert_photo" method="post" class="form-horizontal" enctype="multipart/form-data">
        <label for="image">Image</label>
        <input type="file" id="image" name="image" class="form-control">

        <label for="caption_box">Caption</label>
        <textarea id="caption_box" name="input_caption" rows="2" placeholder="Enter a caption for the photo..."></textarea>
    
        <button>Add photo</button>
      </form>
    </div>
  </div>
<% end %>

<hr>
<div>
  <div>
    <table border="1">
      <tr>

        <th>
          Image
        </th>

        <th>
          Caption
        </th>

        <th>
          Owner
        </th>

        <th>
          Posted
        </th>

        <th>
          Likes
        </th>

        <th>
          Details
        </th>

      </tr>
      
      <% if @public_photos.length() > 0 %>
        <% @public_photos.each do |a_photo| %>
        <tr>

          <td>
            <img src="<%= a_photo.image %>">
          </td>

          <td>
            <%= a_photo.caption %>
          </td>

          <td>
            <%= a_photo.poster.username %>
          </td>

          <td>
            <%= time_ago_in_words(a_photo.updated_at) %> ago
          </td>

          <td>
            <%= a_photo.likes.count() %>
          </td>

          <td>
            <a href="/photos/<%= a_photo.id %>">
              Show details
            </a>
          </td>
        </tr>
        <% end %>
      <% end %>
    </table>
  </div>
</div>

<hr>
